<!DOCTYPE html>
<html lang="th">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>กิจกรรมมหาวิทยาลัย</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="/css/style_events.css">
    <link rel="stylesheet" href="/css/user_btn.css">
    <link rel="stylesheet" href="/css/nav.css">
    <link rel="stylesheet" href="/css/footer.css">
    <link rel="stylesheet" href="/css/card.css">

</head>
<body>
    <%- include('partials/nav'); %>
    
    <section class="page-header">
        <div class="container">
            <div class="header-text">
                <h1>กิจกรรมมหาวิทยาลัย</h1>
                <p>ค้นพบกิจกรรมที่น่าสนใจจากมหาวิทยาลัยชั้นนำและก้าวไปสู่เส้นทางด้านการศึกษาของคุณ</p>
            </div>
        </div>
    </section>
    
    <section class="search-filter-section">
        <div class="container">
            <% // build unique faculty and department lists from events when available %>
            <% const faculties = Array.from(new Set((events || []).map(e => e.faculty).filter(Boolean))); %>
            <% const departments = Array.from(new Set((events || []).map(e => e.department).filter(Boolean))); %>
            <div class="search-filter-wrapper">
                <div class="search-bar">
                    <i class="fas fa-search"></i>
                    <input id="search-input" type="text" placeholder="ค้นหากิจกรรม, มหาวิทยาลัย, หรือหัวข้อ...">
                </div>
                <div class="filters">
                    <div class="dropdown">
                        <select id="university-filter">
                            <option value="">มหาวิทยาลัยทั้งหมด</option>
                            <% (Array.from(new Set((events || []).map(e => e.university).filter(Boolean)))).forEach(function(u){ %>
                                <option value="<%= u %>"><%= u %></option>
                            <% }) %>
                        </select>
                        <i class="fas fa-chevron-down"></i>
                    </div>

                    <div class="dropdown">
                        <select id="type-filter">
                            <option value="">ประเภททั้งหมด</option>
                            <% (Array.from(new Set((events || []).map(e => e.tag).filter(Boolean)))).forEach(function(t){ %>
                                <option value="<%= t %>"><%= t %></option>
                            <% }) %>
                        </select>
                        <i class="fas fa-chevron-down"></i>
                    </div>

                    <div class="dropdown">
                        <select id="faculty-filter">
                            <option value="">ทุกคณะ (Faculty)</option>
                            <% faculties.forEach(function(f){ %>
                                <option value="<%= f %>"><%= f %></option>
                            <% }) %>
                        </select>
                        <i class="fas fa-chevron-down"></i>
                    </div>

                    <div class="dropdown">
                        <select id="department-filter">
                            <option value="">ทุกภาควิชา (Department)</option>
                            <% departments.forEach(function(d){ %>
                                <option value="<%= d %>"><%= d %></option>
                            <% }) %>
                        </select>
                        <i class="fas fa-chevron-down"></i>
                    </div>
                </div>
            </div>
            <div class="results-info">
                <p>พบ <span id="results-count"><%= (events || []).length %></span> กิจกรรม</p>
                <div class="sort-by">
                    <span>เรียงตามวันที่</span>
                    <i class="fas fa-chevron-down"></i>
                </div>
            </div>
        </div>
    </section>

    <section class="events-grid-section">
        <div class="container">
            <div class="card-container">
                <% (events || []).forEach(function(ev){ %>
                    <% const tagClass = (ev.tag || '').toLowerCase().includes('openhouse') ? 'openhouse' : (ev.tag || '').toLowerCase().includes('academic') ? 'academic' : (ev.tag || '').toLowerCase().includes('social') ? 'social' : 'university'; %>
                    <div class="card" data-university="<%= ev.university %>" data-tag="<%= ev.tag %>" data-faculty="<%= ev.faculty || '' %>" data-department="<%= ev.department || '' %>">
                    <div class="card-header">
                        <div class="tags">
                            <span class="tag <%= tagClass %>"><%= ev.tag %></span>
                            <span class="tag university"><%= ev.university %></span>
                        </div>
                        <h3><%= ev.title %></h3>
                    </div>
                    <div class="card-body">
                        <p><i class="fas fa-calendar-alt"></i> <%= (new Date(ev.date)).toLocaleDateString('th-TH', { year: 'numeric', month: 'long', day: 'numeric' }) %></p>
                        <% if (ev.time) { %>
                        <p><i class="fas fa-clock"></i> <%= ev.time %></p>
                        <% } %>
                        <% if (ev.location) { %>
                        <p><i class="fas fa-map-marker-alt"></i> <%= ev.location %></p>
                        <% } %>
                        <% if (typeof ev.interested !== 'undefined') { %>
                        <p class="interested"><i class="fas fa-users"></i> <%= ev.interested %> คนสนใจ</p>
                        <% } %>
                        <p class="description"><%= ev.description %></p>
                    </div>
                    <div class="card-footer">
                        <button class="btn">เข้าร่วมกิจกรรม</button>
                        <i class="far fa-heart heart-icon"></i>
                    </div>
                </div>
                <% }) %>

            </div>
        </div>
    </section>

    <%- include('partials/footer') %>

    <script>
        (function(){
            const searchInput = document.getElementById('search-input');
            const uni = document.getElementById('university-filter');
            const type = document.getElementById('type-filter');
            const faculty = document.getElementById('faculty-filter');
            const department = document.getElementById('department-filter');
            const cards = Array.from(document.querySelectorAll('.card-container .card'));
            const countEl = document.getElementById('results-count');

            function applyFilters(){
                const q = (searchInput && searchInput.value || '').toLowerCase();
                const u = (uni && uni.value || '').toLowerCase();
                const t = (type && type.value || '').toLowerCase();
                const f = (faculty && faculty.value || '').toLowerCase();
                const d = (department && department.value || '').toLowerCase();
                let visible = 0;
                cards.forEach(card => {
                    const text = card.innerText.toLowerCase();
                    const cardUni = (card.dataset.university || '').toLowerCase();
                    const cardTag = (card.dataset.tag || '').toLowerCase();
                    const cardFaculty = (card.dataset.faculty || '').toLowerCase();
                    const cardDept = (card.dataset.department || '').toLowerCase();

                    const matchesQuery = !q || text.includes(q);
                    const matchesUni = !u || cardUni === u;
                    const matchesTag = !t || cardTag === t;
                    const matchesFac = !f || cardFaculty === f;
                    const matchesDept = !d || cardDept === d;

                    const show = matchesQuery && matchesUni && matchesTag && matchesFac && matchesDept;
                    card.style.display = show ? 'flex' : 'none';
                    if(show) visible++;
                });
                if(countEl) countEl.textContent = visible;
            }

            [searchInput, uni, type, faculty, department].forEach(el => {
                if(!el) return;
                el.addEventListener('input', applyFilters);
                el.addEventListener('change', applyFilters);
            });

            applyFilters();
        })();
    </script>
</body>
</html>
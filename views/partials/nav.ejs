<header>
        <nav class="navbar">
            <div class="container">
                <div class="nav-wrapper">
                    <div class="logo">High School Herald</div>
                    <ul class="nav-links">
                        <li><a href="/">หน้าแรก</a></li>
                        <li><a href="/events">กิจกรรม</a></li>
                        <li><a href="/announcement">ประกาศ</a></li>
                        <li><a href="/universities">มหาวิทยาลัย</a></li>
                    </ul>

                    <div class="nav-controls">
                        <% if (user) { %>
                            <div class="user-menu-inline">
                                <% /* prefer email-based admin check, fallback to role */ %>
                                <% if (typeof isAdmin !== 'undefined' && isAdmin) { %>
                                    <a href="/crud" class="profile-btn">จัดการระบบ</a>
                                <% } else if (user.email && Array.isArray(adminEmails) && adminEmails.includes(user.email)) { %>
                                    <a href="/crud" class="profile-btn">จัดการระบบ</a>
                                <% } else { %>
                                    <a href="/profile" class="profile-btn">โปรไฟล์</a>
                                <% } %>
                                <a href="/auth/logout" class="logout-btn">ออกจากระบบ</a>
                            </div>
                        <% } else { %>
                            <a href="/auth/login" class="login-btn">เข้าสู่ระบบ</a>
                        <% } %>
                    </div>
                </div>
            </div>
        </nav>
    </header>